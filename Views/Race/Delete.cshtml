@using RunGroopWebApp.Data.Enum
@model Race

<h1>Você tem certeza que deseja excluir essa corrida?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" placeholder="Título">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Descrição</label>
        <input asp-for="Description" class="form-control" placeholder="Descrição">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RaceCategory">Categoria</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-control">
            <option selected="selected" value="">--Selecione--</option>
        </select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Street">Rua</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Rua">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">Cidade</label>
        <input asp-for="Address.City" class="form-control" placeholder="Cidade">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" class="form-control" placeholder="State">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Imagem</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Imagem">
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    </form>
    <div class="form-group">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
        </form>
     </div>
